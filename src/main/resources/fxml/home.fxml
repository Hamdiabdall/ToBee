<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.controllers.HomeController"
      spacing="10" alignment="CENTER"
      stylesheets="@../css/styles.css"
      prefWidth="800" prefHeight="600">

    <Text text="Produits" styleClass="text-title"/>

    <HBox spacing="10" alignment="CENTER">

        <Label text="Catégorie :" styleClass="text-title"/>
        <ComboBox fx:id="categoryComboBox" onAction="#handleCategoryChange" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="informatique"/>
                    <String fx:value="mode&amp;beaute"/>
                    <String fx:value="sport"/>
                </FXCollections>
            </items>
        </ComboBox>
        <!-- Add the Log Out button -->
        <Button text="Log Out" onAction="#handleLogOut" styleClass="secondary-button" />
    </HBox>

    <TableView fx:id="productTable" prefHeight="400" styleClass="table-view">
        <columns>
            <TableColumn fx:id="matriculeColumn" text="Matricule"/>
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <TableColumn fx:id="marqueColumn" text="Marque"/>
            <TableColumn fx:id="prixColumn" text="Prix"/>
            <TableColumn fx:id="categorieColumn" text="Catégorie"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#redirectToInsertProduct" styleClass="primary-button"/>
        <Button text="Supprimer" onAction="#handleDeleteProduct" styleClass="secondary-button"/>
        <Button text="Modifier" onAction="#handleUpdateProduct" styleClass="primary-button"/>
    </HBox>


</VBox>

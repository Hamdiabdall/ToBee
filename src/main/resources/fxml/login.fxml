<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.controllers.LoginController">
    <Label text="Login" style="-fx-font-size: 18px;"/>
    <TextField fx:id="usernameField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
    <Button fx:id="registerButton" text="Register" onAction="#handleRegisterRedirect"/>
</VBox>

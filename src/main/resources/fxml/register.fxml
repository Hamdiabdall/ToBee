<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.controllers.RegisterController"
           prefWidth="400" prefHeight="550" stylesheets="@../css/styles.css" styleClass="register-root">

    <VBox alignment="CENTER" spacing="10" styleClass="register-container">
        <Label text="Sign Up" styleClass="text-title"/>
        <TextField fx:id="nomField" promptText="User name" styleClass="text-field"/>
        <TextField fx:id="prenomField" promptText="First name" styleClass="text-field"/>
        <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
        <TextField fx:id="phoneField" promptText="Phone" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field"/>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="registerButton" text="Sign Up" onAction="#handleRegister" styleClass="primary-button"/>
            <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLogin" styleClass="secondary-button"/>
        </HBox>
    </VBox>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.controllers.UpdateProductController"
      spacing="15"
      alignment="CENTER"
      stylesheets="../css/styles.css"
      prefWidth="500" prefHeight="600"
      styleClass="update-product-root">

    <Label text="Modifier un produit" styleClass="text-title"/>

    <GridPane hgap="10" vgap="10" styleClass="update-product-grid">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="text-title"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>

        <Label text="Marque:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="text-title"/>
        <TextField fx:id="marqueField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field"/>

        <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="text-title"/>
        <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text-field"/>

        <Label text="CatÃ©gorie:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="text-title"/>
        <TextField fx:id="categorieField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" styleClass="update-product-buttons">
        <Button text="Save" onAction="#handleSave" styleClass="primary-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
    </HBox>
</VBox>

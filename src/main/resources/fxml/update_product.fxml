<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.controllers.UpdateProductController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="400">

    <Label text="Modifier un produit" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Marque:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="marqueField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="CatÃ©gorie:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="categorieField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>
